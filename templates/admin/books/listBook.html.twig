{% extends 'base.html.twig' %}

{% block stylesheets  %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


{% endblock %}
{% block javascripts  %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

{% endblock %}
{% block body %}


    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
        <tr>
            <th>id</th>
            <th>reference</th>
            <th>author</th>
            <th>Modification</th>

        </tr>
        </thead>
        <tbody>

        {% for book in books %}
            <tr>

                <td>
                    <p class="fw-normal mb-1">{{ book.id }}</p>

                </td>

                <td>
                    <p class="fw-normal mb-1">{{ book.reference }}</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">{{  book.authorid }}</p>
                </td>

                <td>

                    <a href="book/edit/{{ book.id }}" class="card-link">
                        <button type="button" class="btn btn-primary">
                            Modifier
                        </button>
                    </a>

                    <a href="book/delete/{{ book.id }}" class="card-link">
                        <button type="button" class="btn btn-danger">
                            Supprimer
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <a href="/create/book" class="card-link">
        <button type="button" class="btn btn-primary"> Cr√©er un nouveau Livre </button>
    </a>


{% endblock %}