{% extends 'base.html.twig' %}

{% block title %}Liste des personnes{% endblock %}
{% block stylesheets  %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">


{% endblock %}
{% block javascripts  %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

{% endblock %}
{% block body %}

    <div class="row" >

                         {% for user in users %}



                    <div class="card mb-2 box-shadow  col-sm-3" style='margin: 1%'>
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">Utilisateur </h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">{{ user.firstname }}<small class="text-muted">  {{ user.lastname }}</small></h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>mail/phone: {{ user.phone }}</li>
                                <li>ID: {{  user.id }}</li>
                                <li>Role: {{  user.roles[0] }}</li>
                            </ul>

                            <a href="/admin/users/edit/{{ user.id }}" class="card-link">
                                <button type="button" class="btn btn-lg btn-block btn-primary"> Edit </button>
                            </a>

                            <a href="/admin/users/delete/{{ user.id }}" class="card-link">
                                <button type="button" class="btn btn-lg btn-block btn-danger"> Supprimer </button>
                            </a>

                        </div>
                    </div>




        {% endfor %}
    </div>




{% endblock %}